<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/CredentialsStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterController">
    
    <VBox alignment="CENTER" fillWidth="false" layoutX="51.2" layoutY="8.0" prefHeight="403.0" prefWidth="581.0" spacing="15.0" AnchorPane.bottomAnchor="33.0" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="39.0" AnchorPane.topAnchor="8.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registro de Usuario" />

        <Label text="Nombre Completo:" />
        <TextField fx:id="nameField" prefHeight="14.0" prefWidth="208.0" promptText="Ingresa tu nombre completo" />

        <Label text="Usuario:" />
        <TextField fx:id="usernameField" prefHeight="12.0" prefWidth="213.0" promptText="Ingresa tu nombre de usuario" />

        <Label text="Email:" />
        <TextField fx:id="emailField" prefHeight="1.0" prefWidth="218.0" promptText="Ingresa tu correo electrónico" />

        <Label text="Contraseña:" />
        <PasswordField fx:id="passwordField" prefHeight="16.0" prefWidth="222.0" promptText="Ingresa tu contraseña" />

        <Button fx:id="registerButton" onAction="#handleRegister" text="Registrarse" />
        <Button fx:id="backButton" onAction="#handleBack" prefHeight="2.0" prefWidth="95.0" text="Volver al Login" />
    </VBox>

</AnchorPane>
