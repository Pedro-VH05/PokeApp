<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PokedexController">
   <children>
      <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <!-- Logo y nombre de la aplicación -->
         <ImageView fitWidth="100" fitHeight="100">
            <image>
               <Image url="@../images/logo.png" />
            </image>
         </ImageView>
         <Label text="Mi Pokédex">
            <font>
               <Font name="Arial" size="24" />
            </font>
         </Label>

         <!-- Contenedor de los Pokémon -->
         <VBox fx:id="pokedexContainer" alignment="CENTER" spacing="10" />
      </VBox>
   </children>
</AnchorPane>